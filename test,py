import cv2
import time
from ultralytics import YOLO

# Load model YOLOv8 nhẹ
model = YOLO("yolov8n.pt")

# Khởi tạo camera
cap = cv2.VideoCapture(0)

# Giới hạn FPS
fps_limit = 10  # Giảm xuống 10 FPS để đỡ lag
prev_time = 0

while cap.isOpened():
    ret, frame = cap.read()
    if not ret:
        break

    # Kiểm tra thời gian để giới hạn FPS
    current_time = time.time()
    if current_time - prev_time < 1 / fps_limit:
        continue
    prev_time = current_time

    #frame_resized = cv2.resize(frame, (640, 480))
    frame_resized = frame

    # Dự đoán
    results = model(frame_resized)

    # Vẽ bounding box
    for result in results:
        for box in result.boxes:
            x1, y1, x2, y2 = map(int, box.xyxy[0])
            conf = box.conf[0].item()
            label = result.names[int(box.cls[0])]
            
            cv2.rectangle(frame_resized, (x1, y1), (x2, y2), (0, 255, 0), 2)

            cv2.putText(frame_resized, f"{label} {conf:.2f}", (x1, y1 - 10), 
                        cv2.FONT_HERSHEY_SIMPLEX, 0.5, (0, 255, 0), 2)

    # Hiển thị
    cv2.imshow("YOLO Real-time Detection", frame_resized)

    # Thoát khi nhấn 'q'
    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()
